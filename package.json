{
  "name": "smarter-testing-ecommerce",
  "version": "1.0.0",
  "description": "Production-grade e-commerce platform API demonstrating CircleCI Smarter Testing with 684 tests",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:performance": "jest --testPathPattern=performance",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2 --reporters=default --reporters=jest-junit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "db:migrate": "ts-node src/libs/database/migrate.ts",
    "db:seed": "ts-node src/libs/database/seed.ts",
    "docs:generate": "tsoa spec-and-routes && swagger-jsdoc -d swaggerDef.js src/**/*.ts -o docs/openapi.json"
  },
  "keywords": [
    "ecommerce",
    "microservices",
    "typescript",
    "circleci",
    "smarter-testing",
    "tdd"
  ],
  "author": "CircleCI Demo",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "apollo-server-express": "^3.13.0",
    "axios": "^1.6.5",
    "bcrypt": "^5.1.1",
    "bull": "^4.12.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.8.1",
    "date-fns": "^3.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fastify": "^4.25.2",
    "graphql": "^16.8.1",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.8",
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.19",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.5",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "autocannon": "^7.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.3",
    "faker": "^5.5.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nock": "^13.5.0",
    "prettier": "^3.2.4",
    "supertest": "^6.3.4",
    "swagger-jsdoc": "^6.2.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsoa": "^6.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
